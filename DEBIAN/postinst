#!/bin/bash
set -e  # Enable exit on error

# Get the logged-in user's username
USER_NAME=$(whoami)

# Directory of the bot
BOT_DIR="/home/$USER_NAME/discord-devros"  # Adjust this path dynamically

# Create virtual environment if it doesn't exist
if [ ! -d "$BOT_DIR/venv" ]; then
    echo "Creating virtual environment..."
    python3 -m venv "$BOT_DIR/venv"
fi

# Activate virtual environment
echo "Activating virtual environment..."
source "$BOT_DIR/venv/bin/activate"

# Install dependencies from requirements.txt
if [ -f "$BOT_DIR/requirements.txt" ]; then
    echo "Installing dependencies from requirements.txt..."
    pip install -r "$BOT_DIR/requirements.txt"
else
    echo "requirements.txt not found. Skipping dependency installation."
fi

# Set permissions for bot.py to ensure it's executable
BOT_SCRIPT_PATH="$BOT_DIR/share/discord_devros/bot.py"

# Debugging line to confirm the bot script path
echo "Looking for bot.py at: $BOT_SCRIPT_PATH"

if [ -f "$BOT_SCRIPT_PATH" ]; then
    chmod +x "$BOT_SCRIPT_PATH"
    echo "Permissions set for bot.py"
else
    echo "Error: bot.py not found in expected directory: $BOT_SCRIPT_PATH"
    exit 1
fi

echo "Installation complete!"
